{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD013": {
    "line_length": 120,
    "heading_line_length": 120,
    "code_block_line_length": 150,
    "tables": false
  },
  "MD024": {
    "siblings_only": true
  },
  "MD033": {
    "allowed_elements": [
      "br",
      "details",
      "summary",
      "kbd",
      "sup",
      "sub"
    ]
  },
  "MD041": false,
  "MD046": {
    "style": "fenced"
  }
}
